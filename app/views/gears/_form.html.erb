<%= simple_form_for @gear do |f| %>
  <%= f.file_field :image %>
  <%= f.input :name, label: "Gear Name" %>
  <%= f.input :description %>
  <%= select_tag(:maker_id, options_for_select(@makers), :prompt => "Select a Maker") %>
  <%= select_tag(:club_id, options_for_select(@clubs), :prompt => "Select a Club") %>
  <%= f.button :submit %>

<% end %>