  <h1 class="current-maker"><%= params[:maker] %></h1>


    <% if @gears.count == 0 %>
      <h2>Gearがありません</h2>
    <% else %>
      <div class="row">
        <% @gears.each do |gear| %>
          <div class="col-xs-6 col-sm-3">
            <%= link_to (image_tag gear.image.url), gear, class: "gear" %>
          </div>
        <% end %>
      </div>
    <% end %>